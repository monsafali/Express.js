<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <div class="col-8 offset-3">
    <h3><%= listing.title %></h3>
  </div>
  <div class="card col-6 offset-3 show-card listing-card">
    <img
      src=" <%= listing.image.url%>"
      class="card-img-top show-img"
      alt="listing_img"
    />
    <div class="card-body">
      <div class="card-text"><%= listing.description %></div>
      <div class="card-text">
        &#8377;<%= listing.price.toLocaleString("en-IN")%>
      </div>
      <div class="card-text"><%= listing.location %></div>
      <div class="card-text"><%= listing.country%></div>
      <a href="/listings/<%= listing._id %>/edit">Edit this Listing</a>
      <br /><br />
      <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
        <button>Delete this listing</button>
      </form>
    </div>
  </div>
</div>
